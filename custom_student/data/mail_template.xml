<?xml version ="1.0"?>
<odoo>
    <data noupdate="1">
        <!--Email template -->
        <record id="sample_biography_email_template" model="mail.template">
            <field name="name">Student Registration: Send by email</field>
            <field name="model_id" ref="custom_student.model_samplebiography"/>
            <field name="email_from">${(object.name.email_formatted) |safe}</field>
            <field name="email_to">${object.email}</field>
            <field name="subject">Student Registration (Ref ${object.reference})</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Dear ${object.name}
                        <br /><br />
                        Here is your Registration No. ${object.reference}
                        <br /><br />
                        Thanks for your Registration.

                    </p>
                </div>
            </field>
<!--            ref is report id-->
            <field name="report_template" ref="sample_biography_report"/>
            <field name="report_name">Student Registration_${(object.reference )}</field>

        </record>
    </data>



</odoo>