<odoo>
    <data>
        <template id="reporting_sample_biography_template">
            <!--            when write with t tag this is html tag crate-->
            <t t-call="web.html_container">
                <t t-call="web.basic_layout">
                    <div class="page" style="font-family:'Myanmar3';">


                    <t t-foreach="docs" t-as="doc">

                        <table class="table">
                            <tr>
                                <th style="text-align:center; vertical-align:middle;">
                                    <h1>
                                        <span t-field="doc.simple_bio.name"/>
                                    </h1>
                                </th>

                                <th style="width:25%; text-align:center; vertical-align:middle;">
                                    <!--    t-option mean when image is not uploaded show default image-->
                                    <div style="border:1px solid gray; height:1in; width:1in;">
                                        <span t-field="doc.simple_bio.image"
                                              t-options="{'widget': 'image', 'style': 'height:100%; width:100%'}"/>
                                    </div>
                                </th>
                            </tr>
                        </table>

                        <!--                        biography information-->
                        <h3 style="background-color:blue; color:white;">Biography Information</h3>
                        <table class="table o_mail_table">
                            <tr>
                                <th>NRC</th>
                                <td>:
                                    <span t-field="doc.simple_bio.nrc"/>
                                </td>
                            </tr>
                            <tr>
                                <th>Phone</th>
                                <td>:
                                    <span t-field="doc.simple_bio.phone"/>
                                </td>
                            </tr>
                            <tr>
                                <th>Email</th>
                                <td>:
                                    <span t-field="doc.simple_bio.email"/>
                                </td>
                            </tr>
                            <tr>
                                <th>Facebook</th>
                                <td>:
                                    <span t-field="doc.simple_bio.facebook"/>
                                </td>
                            </tr>
                            <tr>
                                <th>Date of Birth</th>
                                <td>:
                                    <span t-field="doc.simple_bio.date_of_birth"/>
                                </td>
                            </tr>
                            <tr>
                                <th>Nationality</th>
                                <td>:
                                    <span t-field="doc.simple_bio.nationality"/>
                                </td>
                            </tr>

                        </table>

                        <!--                        Education background-->
                        <h3 style="background-color:blue; color:white;">Education Background</h3>
                        <table class="table table-sm o_main_table">
                            <thead>

                                <th>Name</th>
                                <th>Location</th>
                                <th>Certification</th>
                                <th>From Date</th>
                                <th>To Date</th>
                                <th>Description</th>
                            </thead>
                            <tbody>
                                <t t-foreach="doc.simple_bio.education_background" t-as="edu">
                                    <tr>
                                        <td>
                                            <span t-field="edu.name"/>
                                        </td>
                                        <td>
                                            <span t-field="edu.location"/>
                                        </td>
                                        <td>
                                            <span t-field="edu.certification"/>
                                        </td>
                                        <td>
                                            <span t-field="edu.from_date"/>
                                        </td>
                                        <td>
                                            <span t-field="edu.to_date"/>
                                        </td>
                                        <td>
                                            <span t-field="edu.description"/>
                                        </td>
                                    </tr>

                                </t>
                            </tbody>
                        </table>

                    </t>
                     </div>

                </t>
            </t>
        </template>


        <!--        string = report name in UI-->
        <!--        report type= pdf-->
        <!--        name= module name and template name and create template name in upper-->
        <report id="reporting_simple_bio_pdf"
                model="reporting.wizard"
                string="Sample Biography"
                report_type="qweb-pdf"
                name="custom_student.reporting_sample_biography_template"
                file="custom_student.reporting_sample_biography_template"
                menu="False" print_report_name="object.simple_bio.name"/>

        <!--        format adjust-->
        <record id="reporting_sample_biography_report_paper_format" model="report.paperformat">
            <field name="name">Sample Biography</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">10</field>
            <field name="margin_bottom">10</field>
            <field name="margin_left">5</field>
            <field name="margin_right">5</field>
            <!--                                        custom name and report id-->
            <field name="report_ids" eval="[(4, ref('custom_student.reporting_simple_bio_pdf'))]"/>


        </record>
    </data>
</odoo>