<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="form_reporting_wizard" model="ir.ui.view">
            <field name="name">Reporting</field>
            <field name="model">reporting.wizard</field>
            <field name="arch" type="xml">
                <form string="Reporting">
                    <group string="Bio Type">
                        <field name="bio_type" widget="radio"/>
                    </group>

<!--                    hide simple biography if choose standard bio type-->
                    <group string="Simple Biography"
                           attrs="{'invisible': [('bio_type', '=', 'standard')]}">
                        <group>

                            <field name="simple_bio"
                                   options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="simple_job_type"/>
                            <field name="simple_gender"/>

                        </group>

                        <group>
                            <field name="simple_image" widget="image" class="oe_avatar" nolabel="1"/>
                        </group>


                    </group>
                    <group string="Standard Biography"
                           attrs="{'invisible': [('bio_type', '=', 'simple')]}">
                        <group>
                            <field name="standard_bio"
                                   options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="standard_job_type"/>
                            <field name="standard_gender"/>

                        </group>
                        <group>
                            <field name="standard_image" widget="image" class="oe_avatar" nolabel="1"/>
                        </group>

                    </group>


<!--                    show button in footer and function in reporting wizrd.py-->
                    <footer>
                        <button name="print_sample_biography_pdf" type="object" string="Print PDF" class="btn-primary"/>
                        <button name="print_sample_biography_excel" type="object" string="Print Excel" class="btn-primary"/>
                    </footer>

                </form>
            </field>
        </record>

        <!--        window action-->
        <record id="action_reporting_wizard" model="ir.actions.act_window">
            <field name="name">Reporting</field>
            <field name="res_model">reporting.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <!--        menu item-->
        <menuitem id="menu_reporting" name="Reporting"
                  parent="custom_student"
                  action="action_reporting_wizard"
                  sequence="30"></menuitem>

    </data>
</odoo>