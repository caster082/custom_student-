<odoo>
    <data>
        <record id="bio_skill_form_view" model="ir.ui.view">
            <field name="name">skill_history</field>
            <field name="model">bio.skill</field>
            <field name="arch" type="xml">
                <form string="Skill">
                    <sheet>
                        <field name="image" widget="image" class="oe_avatar"/>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" placeholder="Enter your name" required="True"/>
                            </h1>
                        </div>
                        <group string="Information">
                            <group>

                                <field name="position"/>
                                <field name="responsibilities"/>
                            </group>
                            <group>
                                <field name="from_date"/>
                                <field name="to_date"/>

                            </group>
                        </group>
                        <group>
<!--                            can hide the label using nolabel=1-->
                            <field name="price" options="{'field_digits': True}"/>
                            <field name="description" />
                        </group>


                    </sheet>


                </form>
            </field>

        </record>
    </data>
</odoo>