<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record id="student_parent_list" model="ir.ui.view">
            <field name="name">tree_student_parent</field>
            <field name="model">student.parent</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="id"/>
                    <field name="father_name"/>
                    <field name="mother_name"/>
                    <field name="student_name"/>

                </tree>
            </field>
        </record>

            <!--        window action-->
        <record id="action_student_parent" model="ir.actions.act_window">
            <field name="name">Parent</field>
            <field name="res_model">student.parent</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p>Create first Parent</p>
            </field>
        </record>

<!--        menu item-->
         <menuitem id="student_parent" name="Student" parent="education_background" sequence="50" action="action_student_parent"></menuitem>

    </data>
</odoo>