<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.samplebiography</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
<!--                data key mean for module name-->
                <xpath expr="//div[hasclass('settings')]" position="inside">
                    <div class="app_settings_block" data-string="Sample Biography" id="samplebiography"
                         string="Sample Biography"
                         data-key="custom_student">
                        <h2>Sample Biography</h2>
                        <div class="row mt16 o_settings_container">
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane"/>
                                <div class="o_setting_right_pane">
                                    <span class="o_form_label">Registration Alert</span>
                                    <div class="text-muted content-group mt16">
                                        <field name="register_days" class="text-center oe_inline" />
                                        <span> days</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

        <record id="sample_biography_config_settings_action" model="ir.actions.act_window">
            <field name="name">Settings</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.config.settings</field>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
            <field name="context">{'module' : 'custom_student', 'bin_size': False}</field>
        </record>

<!--        parent can check in setting>>menu item>>find sample biography>> view metadata-->
        <menuitem id="sample_biography_config_settings_menu"
                  name="Settings"
                  parent="custom_student.education_background"
                  sequence="0"
                  action="sample_biography_config_settings_action"/>
    </data>
</odoo>
