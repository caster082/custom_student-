<odoo>
    <data>
        <record id="custom_student_form_view" model="ir.ui.view">
            <field name="name">custom_student_form_view</field>
            <field name="model">customstudent</field>
            <field name="arch" type="xml">

<!--                create,delete and copy=duplicate =0 mean for remove create delete and duplicate button in form-->
                <form string="Custom Student" >
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="toggle_active" groups="base.group_no_one" type="object"
                                    class="oe_stat_button" icon="fa-archive">

<!--                                <field name="active" widget="boolean_button options="{"terminology": "archive"}"/>-->
                                <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>

                            </button>




                        </div>
                        <field name="image" widget="image" class="oe_avatar"/>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="student_name" placeholder="Enter your name" />
                            </h1>
                            <field name="school_type"/>

                        </div>

                        <notebook>
                            <page string="Information">
                                <group string="Contact Information">
                                    <field name="phone"/>
                                    <field name="email"/>
                                    <field name="facebook"/>
                                    <field name="address"/>

                                </group>
                            </page>

                            <page string="Other Information">
                                <group String="General Info">
                                     <group>
                                         <field name="nrc"/>
                                         <field name="date_of_birth"/>
                                     </group>
                                     <group>
                                         <field name="nationality"/>
                                         <field name="qualification"/>
                                     </group>
                                </group>
                                <group>
<!--                                    widget mean show radio and vertical-->
<!--                                    option change vertical to horizontal-->
                                    <field name="gender" widget="radio" options="{'horizontal': true}"/>
                                    <field name="address"/>
                                </group>


                            </page>

                        </notebook>
                    </sheet>


<!--                    chatter under sheet view-->
                    <div class="oe_chatter">
<!--                        add follower and add channels-->
                        <field name="message_follower_ids" widget="mail_followers"/>
<!--                        schedule activity-->
                        <field name="activity_ids" widget="mail_activity"/>
<!--                        log note and send message-->
                        <field name="message_ids" widget="mail_thread"/>

                    </div>


                </form>
            </field>

        </record>
    </data>
</odoo>